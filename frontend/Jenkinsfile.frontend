                    def dockerTool = tool 'docker'
                    // ë¹Œë“œ ì™„ë£Œ í›„ ë¡œì»¬ ì´ë¯¸ì§€ ì‚­ì œ
                    sh "${dockerTool}/bin/docker rmi ${HARBOR_URL}/${HARBOR_PROJECT}/${IMAGE_NAME}:${env.FULL_VERSION}"
                }
            }
        }
    }

    post {
